@model IEnumerable<urun_kayıt_sistemi.Models.Table>

@{
    ViewBag.Title = "Index";
}

<h2>Ürün Listesi</h2>

<p>
    @Html.ActionLink("Yeni Ürün Ekle", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UrunAdi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UrunKodu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Urunfiyat)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UrunAdi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UrunKodu)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Urunfiyat)
        </td>
        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id=item.UrunId }) |
            @Html.ActionLink("Detay", "Details", new { id=item.UrunId }) |
            @Html.ActionLink("Sil", "Delete", new { id=item.UrunId })
        </td>
    </tr>
}

</table>
